.content
  .content-wrap
    %h1.name #{user.name}
    %p.description #{user.bio}
    %ul
      - user.links.each do |link|
        %li
          %a{ href: link.url } #{link.name}

  %ul.nav
    %li
      %a{:href => "/"} home
    - if current_user
      %li
        %a{:href => "/sign_out/"} sign out
      %li
        %a{:href => "/#{@current_user.nickname}"}
          Hello #{@current_user.nickname}
    - else
      %li
        %a{:href => "/sign_in/"} sign in

.cover


